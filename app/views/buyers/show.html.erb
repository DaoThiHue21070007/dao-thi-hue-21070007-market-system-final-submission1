<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Buyer</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to buyers_path, class: button_class(theme: "transparent") do %>
      All Buyers
      <% end %>
      <%= link_to edit_buyer_path(@buyer), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @buyer.name %></p>
      </li>
      <li>
        <p class="font-semibold">Classification:</p>
        <p><%= @buyer.classification %></p>
      </li>
      <li>
        <p class="font-semibold">Feature:</p>
        <p><%= @buyer.feature %></p>
      </li>
      <li>
        <p class="font-semibold">Product:</p>
        <p><%= @buyer.product %></p>
      </li>
  </ul>
</div>
